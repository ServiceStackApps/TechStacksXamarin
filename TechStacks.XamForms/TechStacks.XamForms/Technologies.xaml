<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStacks.XamForms.Technologies"
		         Title="Technologies">
  <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start" Padding="0, 20, 0, 0">
    <SearchBar Placeholder="Search Technologies" x:Name="SearchBarTechnologies"></SearchBar>
    <ListView x:Name="TechnologiesListView" VerticalOptions="FillAndExpand">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Name}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>