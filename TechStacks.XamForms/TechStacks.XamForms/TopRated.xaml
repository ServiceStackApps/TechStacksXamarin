<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStacks.XamForms.TopRated" Title="Top Rated">
  <ContentPage.Content>
    	<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start">
			<Picker x:Name="topTechPicker" Title="          [Top 100 Technologies]          " VerticalOptions="Start" HorizontalOptions="CenterAndExpand"></Picker>
			<ListView x:Name="topTechListView" VerticalOptions="FillAndExpand">
				<ListView.ItemTemplate>
					<DataTemplate>
						<TextCell Text="{Binding Name}" />
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
  </ContentPage.Content>
</ContentPage>